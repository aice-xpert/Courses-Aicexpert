        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById('assignmentForm').addEventListener('submit', function (event) {
                const Student_ID_Card = document.getElementById('Student_ID_Card');
                const errorMessage = document.getElementById('errorMessage');

                if (!Student_ID_Card.files.length) {
                    errorMessage.style.display = 'block';
                    event.preventDefault();
                }

                else {
                    errorMessage.style.display = 'none';
                }

                const Paid_Slip = document.getElementById('Paid_Slip');

                if (!Paid_Slip.files.length) {
                    errorMessage.style.display = 'block';
                    event.preventDefault();
                }

                else {
                    errorMessage.style.display = 'none';
                }
            });


            document.getElementById('Student_ID_Card').addEventListener('change', function (event) {
                const file = event.target.files[0];
                const fileNameElement = document.getElementById('fileName_StudentCard');
                const filePreviewElement = document.getElementById('filePreview_StudentCard');

                if (file) {
                    fileNameElement.textContent = file.name;

                    if (file.type.startsWith('image/')) {
                        const reader = new FileReader();
                        reader.onload = function (e) {
                            filePreviewElement.src = e.target.result;
                            filePreviewElement.style.display = 'block';
                        };
                        reader.readAsDataURL(file);
                    }

                    else {
                        filePreviewElement.style.display = 'none';
                    }
                }

                else {
                    fileNameElement.textContent = 'No file chosen';
                    filePreviewElement.style.display = 'none';
                }
            });

            document.getElementById('Paid_Slip').addEventListener('change', function (event) {
                const file = event.target.files[0];
                const fileNameElement = document.getElementById('fileName_PaidSlip');
                const filePreviewElement = document.getElementById('filePreview_PaidSlip');

                if (file) {
                    fileNameElement.textContent = file.name;

                    if (file.type.startsWith('image/')) {
                        const reader = new FileReader();
                        reader.onload = function (e) {
                            filePreviewElement.src = e.target.result;
                            filePreviewElement.style.display = 'block';
                        };
                        reader.readAsDataURL(file);
                    }

                    else {
                        filePreviewElement.style.display = 'none';
                    }
                }

                else {
                    fileNameElement.textContent = 'No file chosen';
                    filePreviewElement.style.display = 'none';
                }
            });
        });
    </script>

