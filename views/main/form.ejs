            const whatsapp = $('#whatsapp');
            const transactionIdInput = $('#transactionId');
            const accountTitleSenderInput = $('#accountTitleSender');

            $('#assignmentForm').on('submit', function (e) {
                sessionStorage.removeItem('formData');
            });

            window.onload = function () {
                const formDataString = sessionStorage.getItem('formData');

                if (formDataString) {
                    try {
                        const formData = JSON.parse(formDataString);

                        nameInput.val(formData.name || '');

                        professionSelect.val(formData.profession || '');

                        emailInput.val(formData.email || '');

                        whatsapp.val(formData.whatsapp || '');

                        coursesSelect.val(formData.courses || '');

                        transactionIdInput.val(formData.transactionId || '');

                        accountTitleSenderInput.val(formData.accountTitleSender || '');

                        transactionDateTimeInput.val(formData.transactionDateTime || '');
                    }

                    catch (error) {
                        console.error('Error parsing formData from sessionStorage:', error);
                    }
                }
            };
        });
